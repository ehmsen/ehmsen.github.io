{
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Jekyll Server",
            "runtimeExecutable": "bash",
            "runtimeArgs": ["-c", "bundle exec jekyll serve --watch"],
            // "runtimeArgs": ["-c", "bundle exec jekyll serve --watch --incremental"],
            "env": {
                "JEKYLL_ENV": "production"
            },
            "console": "integratedTerminal"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Convert MOV to MP4",
            "runtimeExecutable": "bash",
            "runtimeArgs": ["-c", "cd ${workspaceFolder}/assets/posts && ./convert_mov_to_mp4.sh"],
            "console": "integratedTerminal"
        }
    ]
}